@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add an Engineer to this Machine for maintenance and repair~</h2>

<h4>This Machine is -@Html.DisplayFor(model => model.Name)-</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select an Engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to current Machines", "Index")</p>